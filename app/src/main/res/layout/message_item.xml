<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/normal_margin"
    android:paddingRight="@dimen/normal_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/message_item_friend_avatar"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_marginTop="7.5dp"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/message_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@android:drawable/presence_online" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/message_item_message_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7.5dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:background="@drawable/message_cloud_friend"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/message_item_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is sample message which was sent last night ;P"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/message_item_send_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02/07/2017 10:37"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>