<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:paddingLeft="@dimen/normal_margin"
    android:paddingRight="@dimen/normal_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/conversation_item_last_sender_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/conversation_item_user_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circled_image"
            android:cropToPadding="false"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:visibility="visible"
            app:srcCompat="@drawable/user" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/normal_margin"
        android:paddingLeft="5dp"
        android:paddingTop="@dimen/normal_margin">

        <TextView
            android:id="@+id/conversation_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Username Username"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/conversation_item_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/conversation_item_username"
            android:text="Message" />

        <TextView
            android:id="@+id/conversation_item_send_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="28/07/2017"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/conversation_item_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/conversation_item_send_date"
            android:text="20:08"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>